@using Microsoft.AspNetCore.Components.Web
@using Tehno.WebSite.Models
@using Tehno.WebSite.Services;
@inject JsonFileTorroService TorroService
<div>
    <strong>
    <font style="font-size:16px;">NORMA</font>
    <font style="font-size:16px; color:#00b2b0;">CONNECT® ARS</font>
</strong></div>
<div class="card-columns">
    @foreach (var torro in TorroService.GetCETKE())
    {
    <div class="card">
        <img class="cetke" src="@torro.img">
        <div class="card-body card-body-cetke">
            <h5>
                <b>@torro.naziv</b>
            </h5>
            <h5 style="font-size: 14px">
                @torro.izvedba
            </h5>
        </div>
        <div class="card-footer">
            <a href="@torro.velicinaimg">
                <h5>
                    <b>Katalog</b>
                </h5>
            </a>
        </div>
    </div>
    }
</div>



