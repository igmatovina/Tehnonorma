@using Microsoft.AspNetCore.Components.Web
@using Tehno.WebSite.Models
@using Tehno.WebSite.Services;
@inject JsonFileTorroService TorroService
<strong>
    <font style="font-size:16px;">NORMA</font>
    <font style="font-size:16px; color:#00b2b0;">TECHMALUX®</font>
</strong>
<div class="card-columns-wider columncount">
    @foreach (var torro in TorroService.GetREFLEKTORI())
    {
        <h5>
            <b>@torro.naziv</b>
        </h5>
        <div class="card-wider" style="width:auto">
            <img src="@torro.img" class="imgreflektori">

            <div class="card-footer lampe">
                <small class="text-mutted">
                    <a href="@torro.velicinaimg" class="button">
                        <h5><b>Katalog</b></h5>
                    </a>
                </small>
            </div>
        </div>

    }
</div>



