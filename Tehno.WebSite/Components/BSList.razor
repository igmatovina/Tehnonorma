@using Microsoft.AspNetCore.Components.Web
@using Tehno.WebSite.Models
@using Tehno.WebSite.Services;
@inject JsonFileTorroService TorroService
    <div>
        <strong>
            <font style="font-size:16px;">NORMA</font>
            <font style="font-size:16px; color:#00b2b0;">TECHMALUX®</font>
        </strong>
    </div>
<h5>
    <b> Obujmica jednodjelna BS</b>
</h5>
<div class="card-columns">
    @foreach (var torro in TorroService.GetBS())
    {
        <div class="card">
            <img src="@torro.img">
            <div class="card-body" style="height:50px">
                <h5>
                    <b>@torro.naziv</b>
                </h5>
                <h5>@torro.materijal</h5>
                <h5>
                    @torro.opis
                </h5>
                <h5>@torro.din</h5>

            </div>
        </div>
    }
</div>

<a href="katalozi/NORMAFIXBS.pdf">
    <h5>
        <b>Katalog NORMAFIX® BS</b>
    </h5>
</a>




