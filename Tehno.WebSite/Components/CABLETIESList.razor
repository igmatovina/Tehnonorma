@using Microsoft.AspNetCore.Components.Web
@using Tehno.WebSite.Models
@using Tehno.WebSite.Services;
@inject JsonFileTorroService TorroService
<div>
    <strong>
        <font style="font-size:16px;">NORMA</font>
        <font style="font-size:16px; color:#00b2b0;">FIX® CT</font>
    </strong>

</div>
<div class="card-columns">
    @foreach (var torro in TorroService.GetCABLETIES())
    {
        <div class="card-wider">
            <img src="@torro.img" class="img-width">
            <div class="card-body-higher">
                <h5>
                    <b>@torro.naziv</b>
                </h5>
                <h5>@torro.materijal</h5>
                <h5>
                    - glatki zaobljeni rubovi za lakše rukovanje i sigurnu instalaciju<br />
                    - zaobljeni vrh omogućuje lakše umetanje kroz glavu priveznice<br />
                    - nisko trenje materijala<br />
                    - optimalna otpornost na ekstremne temperature, ulja, masti itd.<br />
                    - raznolikost boja: crna, bijela, crvena, žuta, zelena, plava<br />
                    - povećana otpornost na UV zrake<br />
                    - pogodno za upotrebu na otvorenom
                </h5>
            </div>
            <a href="katalozi/NORMA_Cable Ties_en.pdf">
                <h5>
                    <b>Katalog NORMAFIX® CABLETIES</b>
                </h5>
            </a>
        </div>
    }
</div>



@if (selectedTorro != null)
{
    <div class="modal fade" id="productModal" tabindex="-1" role="dialog" aria-labelledby="productTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="productTitle">@selectedTorro.naziv</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card-dimension">
                        <div class="card-body-dimension">
                            <img class="new" src="@selectedTorro.velicinaimg">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    Torro selectedTorro;
    string selectedTorroId;

    void SelectTorro(string torroId)
    {
        selectedTorroId = torroId;
        selectedTorro = TorroService.GetCABLETIES().First(x => x.id == torroId);
    }
}
