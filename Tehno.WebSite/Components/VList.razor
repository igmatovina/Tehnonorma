@using Microsoft.AspNetCore.Components.Web
@using Tehno.WebSite.Models
@using Tehno.WebSite.Services;
@inject JsonFileTorroService TorroService
<strong>
    <font style="font-size:16px;">NORMA</font>
    <font style="font-size:16px; color:#00b2b0;">CONNECT® V</font>
</strong>
<div class="card-columns">
    @foreach (var torro in TorroService.GetV())
    {

        <div class="card-wider">
            <img src="@torro.img">
            <div class="card-body">
                <h5>
                    <b>@torro.naziv</b>
                </h5>
                <h5>
                    @torro.izvedba
                </h5>
                <h5>@torro.opis</h5>

                <h5>@torro.materijal</h5>

                <h5>@torro.din</h5>


            </div>

            <div class="card-footer">
                <small class="text-mutted">
                    <a href="@torro.velicinaimg" class="button">
                        <h5><b>Katalog</b></h5>
                    </a>
                </small>
            </div>
        </div>

    }
</div>



